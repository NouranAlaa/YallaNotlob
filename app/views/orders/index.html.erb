<div class="row">
    <div class="col-md-10">
        <h1> Order</h1>
    </div>
    <div class="col-md-2">
        <a href=" <%= new_order_path %>" class="btn btn-info"> Start new Order </a>
    </div>

</div>
<div class="row">
    <div class="col-md-12">
    <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Order</th>
        <th scope="col">Restaurant</th>
        <th scope="col">Invited</th>
        <th scope="col">Joined</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>

      </tr>
    </thead>
    <tbody>
    <% x=0 %>
    <% for order in @orders %>
      <tr>
        <th scope="row"><%= x=x+1 %></th>
        <td><%= order.name %></td>
        <td><%= order.restaurant %></td>
        <td><%= order.count_invited_users(order.id) %></td>
        <td><%= order.count_joined_users(order.id) %></td>
        <td><%= order.status %></td>
        <td><% if (order.status == 'waiting')%>
        <%= link_to 'finish', order_path(order),
        method: :put,
        data: { confirm: 'Are you sure?' } %>
        <%= link_to 'cancel', order_path(order),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
        <a href=" <%= order_order_items_path(order) %>" > view </a>
        
        <% else %>
        <a href=" <%= order_order_items_path(order) %>" > view </a>


        <% end %>
        
        </td>
      </tr>
      <% end %>
  
    </tbody>
  </table>
  
    </div>
</div>
